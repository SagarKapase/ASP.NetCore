@model IEnumerable<FirstWebApplication.Models.Employees>

@{
    ViewData["Title"] = "ShowEmployees";
}


<h1 class="text-center">Employee Details</h1><br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Department)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.EmployeeName
                    </td>
                    <td>
                        @item.EmailAddress
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @item.Department
                    </td>
                    <td>
                        @* <button type="button" class="btn btn-dark" onclick="deleteEmp()">Delete</button> *@
                        <form asp-action="DeleteEmployee" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@item.Id"/>
                            <button type="submit" class="btn btn-dark" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No employees found.</td>
            </tr>
        }
    </tbody>
</table>


